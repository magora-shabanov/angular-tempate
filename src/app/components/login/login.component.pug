div(class="col-xs-12 col-sm-6 col-lg-4 login-container")
  h2
    b Login form
  form((ngSubmit)="f.form.valid && login()", #f="ngForm", novalidate)
    div(class="form-group", [ngClass]= "{'has-error': f.submitted && !username.valid }")
      input( id="username", class="form-control", name="username", [(ngModel)]= "userModel.username", #username="ngModel", placeholder="Username" required)
      div(*ngIf="f.submitted && !username.valid" class="help-block")
        | Username is required
    div(class="form-group", [ngClass]="{'has-error': f.submitted && !password.valid }")
      input(id="password" type="password", class="form-control", name="password2", [(ngModel)]= "userModel.password", #password="ngModel", placeholder="Password" required)
      div(*ngIf="f.submitted && !password.valid" class="help-block")
        | Password is required

    div(class="form-group")
      button([disabled]="isLoading" class="btn btn-primary")
        | Login
      img( *ngIf="isLoading", src="data:image/gif;base64,")
    div.clearfix