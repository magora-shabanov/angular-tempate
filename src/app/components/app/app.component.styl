@import "../../../styles/variables.styl"

ul
  padding 0
  li
    list-style none

html, body
  header
    background white
    height 60px
    line-height 60px
    width 100%
    border 1px solid rgba(211, 211, 211, 0.36)
    & > div
      padding 0 12px
      div.logo
        float left
        width 250px
        text-align center
      nav.main-sections
        float left
        ul > li
          float left
          margin-left 15px
          padding 0 12px
          &:first-child
            margin-left 0
      nav.add-nav
        float right
        a
          color lightgray

  section.content
    border 1px solid rgba(211, 211, 211, 0.36)
    margin-top 5px
    background white
    padding 12px

  footer
    border 1px solid rgba(211, 211, 211, 0.36)
    background: white
    height 40px
    line-height 40px
    padding 0 12px
